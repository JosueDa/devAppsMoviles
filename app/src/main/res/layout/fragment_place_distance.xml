<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PlaceDistanceFragment"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/placesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="parent"
        tools:layout_editor_absoluteX="47dp" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/menuFloating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/filter100km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_100km"

            />
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/filter50km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_50km"

            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/filter20km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_20km"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/filter10km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_10km"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/filter5km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_icon="@drawable/ic_5km"
            />
    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</androidx.constraintlayout.widget.ConstraintLayout>